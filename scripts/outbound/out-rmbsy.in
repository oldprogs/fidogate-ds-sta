#
# $Id: out-rmbsy.in,v 5.1 2004/12/10 19:09:55 anray Exp $
#
# Remove BSY files in outbound, older than 4 hours
#
# Needs GNU find!
#

OUT="<BTBASEDIR>/out"

if [ $# == 0 ]; then
    find $OUT -follow -name '*.bsy' -mmin +240 -print -exec rm -f {} \; 2>/dev/null
elif [ $1 == "now" ]; then
    rm -f `find $OUT -follow -name *.bsy`
fi
